extends ../../layouts/default.pug
block head
    link(rel="stylesheet", href="/admin/css/detail.css")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css")

block main
    .account-detail
        .container
            .row.justify-content-center
                .col-lg-11.col-xl-10
                    .account-card
                        if account
                            // Product Header
                            .account-header
                                h1= account.title

                            // Main Content
                            .account-content
                                // Product Image
                                if account.thumbnail
                                    .account-image-section
                                        img.account-image(
                                            src=account.thumbnail
                                            alt=account.title || 'Product Image'
                                        )

                                // Product Info
                                .account-info
                                    // Price
                                    .info-group.fullName
                                        .info-label Họ tên
                                        .info-value.fullName-value= account.fullName

                                    // email
                                    .info-group.email
                                        .info-label Email
                                        .info-value.email-value= account.email 

                                    // Status
                                    .info-group.status
                                        .info-label Trạng thái
                                        .info-value
                                            if account.status === 'active'
                                                span.status-badge.active Hoạt động
                                            else
                                                span.status-badge.inactive Dừng hoạt động

                            // Edit Button
                            .edit-button
                                a.btn-edit(href=`${prefixAdmin}/accounts/edit/${account.id}`)
                                    i.fas.fa-edit.me-2
                                    | Chỉnh sửa

                        else
                            .error-state
                                .error-icon
                                    i.fas.fa-exclamation-triangle
                                .error-message
                                    h4 Không tìm thấy sản phẩm
                                    p Sản phẩm không tồn tại hoặc đã bị xóa!

        script(src="/admin/js/product.js")