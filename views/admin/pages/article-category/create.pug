extends ../../layouts/default.pug
include ../../mixins/alert.pug
include ../../mixins/select-tree.pug

block main
    h1(class="mb-4") Thêm mới danh mục bài viết

    +alertError

    form(
      action=`${prefixAdmin}/article-category/create`
      method="POST"
      enctype="multipart/form-data"
    )
      .form-group
        label(for="title") Tiêu đề
        input(
          type="text"
          class="form-control"
          id="title"
          name="title"
          required 
        )

      .form-group
        label(for="product_category_id") Danh mục bài viết liên kết
        select.form-control(name="product_category_id" id="product_category_id")
          option(value="") --Chọn danh mục sản phẩm--
          if productCategories && productCategories.length
            each cat in productCategories
              option(value=cat._id)= cat.title


      .form-group
        label(for="desc") Mô tả
        textarea(
          class="form-control textarea-mce"
          id="desc"
          name="description"
          rows="5"
        )

      .form-group(upload-image)
        label(for="thumbnail") Ảnh
        input(
          upload-image-input
          type="file"
          class="form-control-file"
          id="thumbnail"
          name="thumbnail"
          accept="image/*"
        )
        button(
          type="button"
          class="btn btn-sm btn-danger ms-2"
          upload-image-remove
          style="display:none;position:absolute;right:10px;top:10px;z-index:2;"
        ) x
        img(
          src=""
          upload-image-preview
          class="image-preview"
          style="display:none;"
        )

      .form-group
        label(for="position") Vị trí
        input(
          type="number"
          class="form-control"
          id="position"
          name="position"
          placeholder="Tự động tăng"
          min="1"
        )

      .mb-3.form-group
        label.mb-2 Trạng thái
        .form-check.form-check-inline
          input(
            type="radio"
            class="form-check-input"
            id="statusActive"
            name="status"
            value="active"
            checked
          )
        label.form-check-label(for="statusActive") Hoạt động
        .form-check.form-check-inline
            input(
              type="radio"
              class="form-check-input"
              id="statusInActive"
              name="status"
              value="inactive"
            )
        label.form-check-label(for="statusInActive") Dừng hoạt động

      .form-group
        button(
          type="submit"
          class="btn btn-primary"
        ) Thêm mới
