extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    h1(class="mb-4") Phân quyền
    
    //- div #{records}
    if(records)
        div(class="text-right")
            button(
                type="submit"
                class="mb-3 btn btn-primary"
                button-submit
            ) Cập nhật
        
        // Bảng 1: Danh mục sản phẩm
        h4(class="mt-4 mb-3") Danh mục sản phẩm
        table(
            class="table table-hover table-sm"
            table-permissions
        )
            thead
                tr
                    th Tính năng
                    each item in records
                        th(class="text-center" data-id=item._id) #{item.title}
            tbody
                tr(data-name="product-category_view")
                    td Xem
                    each item in records
                        td(class="text-center")
                            - const isChecked = item.permissions && item.permissions.includes("product-category_view")
                            input(type="checkbox" checked=isChecked)
                tr(data-name="product-category_create")
                    td Thêm mới
                    each item in records
                        td(class="text-center")
                            - const isChecked = item.permissions && item.permissions.includes("product-category_create")
                            input(type="checkbox" checked=isChecked)
                tr(data-name="product-category_edit")
                    td Chỉnh sửa
                    each item in records
                        td(class="text-center")
                            - const isChecked = item.permissions && item.permissions.includes("product-category_edit")
                            input(type="checkbox" checked=isChecked)
                tr(data-name="product-category_delete")
                    td Xóa
                    each item in records
                        td(class="text-center")
                            - const isChecked = item.permissions && item.permissions.includes("product-category_delete")
                            input(type="checkbox" checked=isChecked)

        // Bảng 2: Nhóm quyền
        h4(class="mt-4 mb-3") Nhóm quyền
        table(
            class="table table-hover table-sm"
            table-permissions-roles
        )
            thead
                tr
                    th Tính năng
                    each item in records
                        th(class="text-center" data-id=item._id) #{item.title}
            tbody
                tr(data-name="roles_view")
                    td Xem
                    each item in records
                        td(class="text-center")
                            - const isChecked = item.permissions && item.permissions.includes("roles_view")
                            input(type="checkbox" checked=isChecked)
                tr(data-name="roles_create")
                    td Thêm mới
                    each item in records
                        td(class="text-center")
                            - const isChecked = item.permissions && item.permissions.includes("roles_create")
                            input(type="checkbox" checked=isChecked)
                tr(data-name="roles_edit")
                    td Chỉnh sửa
                    each item in records
                        td(class="text-center")
                            - const isChecked = item.permissions && item.permissions.includes("roles_edit")
                            input(type="checkbox" checked=isChecked)
                tr(data-name="roles_delete")
                    td Xóa
                    each item in records
                        td(class="text-center")
                            - const isChecked = item.permissions && item.permissions.includes("roles_delete")
                            input(type="checkbox" checked=isChecked)
                            //quy tắc đặt tên attribute: table-permissions-

    form(
        id="form-change-permissions"
        method="POST"
        class="d-none"
        action=`${prefixAdmin}/roles/permissions?_method=PATCH`
    )
        div(class="form-group")
            input(
                type="text"
                class="form-control"
                name="permissions"
            )
        div(class="form-group")
            input(
                type="text"
                class="form-control"
                name="roleId"
                placeholder="ID nhóm quyền"
            )
    
    script(src="/admin/js/role.js")