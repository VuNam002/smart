extends ../../layouts/auth.pug

include ../../mixins/alert.pug

block main
    style.
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
        }
        .card {
         
            backdrop-filter: blur(10px);
            background: rgba(255, 255, 255, 0.95);
            transition: all 0.3s ease;
            animation: slideUp 0.6s ease-out;
        }
        .form-control {
            border: 2px solid #e9ecef;
            border-radius: 12px;
            transition: all 0.3s ease;
        }
        .form-control:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
            transform: translateY(-1px);
        }
        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            border-radius: 12px;
            transition: all 0.3s ease;
        }
        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
        }
        .fa-user-circle {
            animation: pulse 2s infinite;
        }
        @keyframes slideUp {
            from { opacity: 0; transform: translateY(30px); }
            to { opacity: 1; transform: translateY(0); }
        }
        @keyframes pulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.05); }
        }
    +alertError(3000)
    
    .container.my-5
        .row.justify-content-center
            .col-lg-6.col-md-6.col-sm-8
                .card.shadow-lg.border-0
                    .card-body.p-5
                        .text-center.mb-4
                            .mb-3
                                i.fas.fa-user-circle.fa-4x.text-primary
                            h2.fw-bold.text-dark Đăng nhập
                            p.text-muted Chào mừng bạn quay trở lại
                        
                        form(action=`${prefixAdmin}/auth/login` method="POST")
                            .mb-3
                                label.form-label(for="email") 
                                    i.fas.fa-envelope.me-2.text-primary
                                    | Email
                                input.form-control.form-control-lg(
                                    type="email"
                                    id="email"
                                    name="email"
                                    placeholder="Nhập email của bạn"
                                    required
                                )
                            
                            .mb-4
                                label.form-label(for="password") 
                                    i.fas.fa-lock.me-2.text-primary
                                    | Mật khẩu
                                input.form-control.form-control-lg(
                                    type="password"
                                    id="password"
                                    name="password"
                                    placeholder="Nhập mật khẩu"
                                    required
                                )
                            
                            .d-grid.mb-3
                                button.btn.btn-primary.btn-lg(type="submit")
                                    i.fas.fa-sign-in-alt.me-2
                                    | Đăng nhập
                    
                    .card-footer.bg-light.text-center.py-3
                        small.text-muted Bảo mật và an toàn
                        br
                        small.text-muted 
                            i.fas.fa-shield-alt.me-1
                            | Thông tin được mã hóa SSL