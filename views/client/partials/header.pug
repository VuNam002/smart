include ../mixins/sub-menu.pug
header.header
  .container
    .row.align-items-center
      .col-6.col-md-3
        .inner-logo
          a(href="/")
            img(src="/image/logo-tokyolife.svg", alt="Logo")
      .col-6.col-md-6
        .inner-menu
          ul
            li
              a(href="/") Trang chủ
            li(class="sub-menu")
              - const pathProduct = "/products"
              - const pathProductCategory = "/products/category"
              a(href=pathProduct) Sản phẩm
              +sub-menu(layoutProductsCategory, pathProductCategory)
            li(class="sub-menu")
              - const pathArticle = "/articles"
              - const pathArticleCategory = "/articles/category"
              a(href=pathArticle) Bài viết
              +sub-menu(layoutBlogCategories, pathArticleCategory)
            li
              a(href="/contact") Liên hệ
            li 
              a(href="/cart")#mini-cart Giỏ hàng (#{miniCart && miniCart.totalQuantity ? miniCart.totalQuantity : 0})
      .col-12.col-md-3
        form(action="/search", method="GET")
          .input-group
            input.form-control(
              type="text",
              name="keyword",
              value = keyword
              placeholder="Tìm kiếm...",
              style="border-radius: 25px 0 0 25px; height: 40px; border: 1px solid #ddd; background-color: #f8f9fa; box-shadow: none;"
            )
            button.btn(
              type="submit",
              style="border-radius: 0 25px 25px 0; height: 40px; background-color: #dc3545; border: 1px solid #dc3545; color: white; box-shadow: none;"
            ) Tìm kiếm
      