extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
    +box-head("Xác thực OTP")

    .container.my-5
        .row.justify-content-center 
            .col-8 
                h1(class="text-center") Xác thực OTP 
                form(
                    action="/user/password/otp",
                    method="POST",
                )
                    div(class="form-group")
                        label(for="email") Email 
                        input(
                            type="email",
                            class="form-control",
                            id="email",
                            name="email",
                            placeholder="Nhập email",
                            required
                            value=email 
                            readonly
                        )
                    div(class="form-group")
                        label(for="otp") Mã OTP 
                        input(
                            type="text",
                            class="form-control",
                            id="otp",
                            name="otp",
                            placeholder="Nhập mã OTP",
                            required
                        )
                    div(class="form-group")
                        button(
                            type="submit",
                            class="btn btn-primary btn-block"
                        ) Xác thực OTP