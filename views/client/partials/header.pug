include ../mixins/sub-menu.pug
header.header
  .container
    .row.align-items-center
      .col-6.col-md-3
        .inner-logo
          a(href="/")
            img(src="/image/logo-tokyolife.svg", alt="Logo")
      .col-6.col-md-9
        .inner-menu
          ul
            li
              a(href="/") Trang chủ
            li(class="sub-menu")
              - const pathProduct = "/products"
              - const pathProductCategory = "/products/category"
              a(href=pathProduct) Sản phẩm
              +sub-menu(layoutProductsCategory, pathProductCategory)
            li(class="sub-menu")
              - const pathBlog = "/articles"
              a(href=pathBlog) Bài viết
              +sub-menu(layoutBlogCategories, pathBlog)
            li
              a(href="/contact") Liên hệ