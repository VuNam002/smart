mixin alert-error(time)
    if messages.error && messages.error.length > 0
        .message.info 
            div(
                class="alert alert-danger"
                show-alert
                data-time=time
            )
                span= messages.error
                span(close-alert) &times;
mixin alert-success(time)
    if messages.success && messages.success.length > 0
        .message.info
            div(
                class="alert alert-success"
                show-alert
                data-time=time
            )
                span= messages.success
                span(close-alert)