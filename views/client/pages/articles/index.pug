extends ../../layouts/default.pug

block main
  .container.my-4
    .row
      .col-12
        h1.mb-4.fw-normal #{pageTitle}
        
    .row.g-4
      if articles.length > 0
        each article in articles
          .col-md-6.col-lg-4.mb-4
            .card.h-100.shadow-sm.border-0
              .position-relative.overflow-hidden
                img.card-img-top.img-fluid.object-fit-cover(src=article.thumbnail, alt=article.title, style="height: 220px;")
              .card-body.p-4
                h5.card-title.mb-3.lh-base
                  a.stretched-link.text-dark.text-decoration-none(href=`/articles/${article.slug}`) #{article.title}
                if article.excerpt
                  p.card-text.text-muted.mb-3.small= article.excerpt
                if article.publishedAt
                  .text-muted.small
                    i.fas.fa-calendar.me-1
                    = new Date(article.publishedAt).toLocaleDateString('vi-VN')
      else
        .col-12
          .text-center.py-5
            .text-muted.mb-3
              i.fas.fa-file-alt.fa-2x
            p.text-muted.mb-0 Không tìm thấy bài viết nào.