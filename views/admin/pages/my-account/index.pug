extends ../../layouts/default.pug 

block main 
    h1.mb-4 Thông tin cá nhân 

    if user && user.avatar
        img(src=user.avatar, width="150px", class="mb-3")
    else 
        img(src="/admin/images/avatar.png", width="150px", class="mb-3")

    if user && user.fullName
        p Họ tên: 
            b #{user.fullName}

    if user && user.email
        p Email: 
            b #{user.email}

    if user && user.phone
        p Số điện thoại: 
            b #{user.phone}

    if user && user.status
        p  
            span Trạng thái: 
            b #{user.status === "active" ? "Hoạt động" : "Không hoạt động"}

    if role && role.title
        p Phân quyền: 
            b #{role.title}

    a.btn.btn-primary(href=`${prefixAdmin}/my-account/edit/${user._id}}`) Chỉnh sửa thông tin
